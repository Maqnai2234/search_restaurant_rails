.row.mt-1
  .col-xs
    %h2
      Especialidades
    %table.table
      %thead.thead-default
        %tr
          %th
            Id
          %th
            Nombre
          %th
            Acciones
      %tbody
        - @specialties.each do |specialty|
          %tr
            %td
              = specialty.id
            %td
              = specialty.name
            %td
              -# =link_to 'Ver',admin_specialty_path(specialty), class: "btn"
              =link_to 'Editar',edit_admin_specialty_path(specialty), class: "btn"
              =link_to 'Borrar',admin_specialty_path(specialty), class: "btn", method: :delete, data: {confirm: "Estas seguro?"}
.row.mt-1
  =link_to "Nueva especialidad",new_admin_specialty_path(), class: "btn indigo darken-3"
